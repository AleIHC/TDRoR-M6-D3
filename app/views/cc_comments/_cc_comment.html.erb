<div id="<%= dom_id cc_comment %>">

  <div class="row d-flex justify-content-center comment">
        <div class="col-md-8 col-lg-6 mb-5">
          <div class="card shadow-0 border">
            <div class="card-body p-0">
              <div class="card m-0">
                <div class="card-body">
                  <p><%= cc_comment.content %></p>
                  <div class="d-flex justify-content-between">
                    <div class="d-flex flex-row align-items-center">
                      <img src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(4).webp" alt="avatar" width="25"
                        height="25" />
                      <% if cc_comment.cc_user_id %>
                        <p class="small mb-0 ms-2"><%= cc_comment.cc_user.name %></p>
                      <% else %>
                        <p class="small mb-0 ms-2">Anonymous</p>
                      <% end %>
                    </div>
                    <div class="d-flex flex-row align-items-center">
                      <p class="small text-muted mb-0 me-2">Upvote?</p>
                    </div>
                  </div>
                </div>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
  </div>

